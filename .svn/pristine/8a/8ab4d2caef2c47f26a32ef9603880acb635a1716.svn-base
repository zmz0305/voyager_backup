@import "../valo/valo.scss";
@mixin crawler4 {
  @include valo;
	.header{
		background-color:rgba(206,190,190,.9);
	}
	
	.grid{
		border: 1px solid;
	}
	
	.v-menubar-menuitem {
		color: #684640 !important;
		font-weight: 700 !important;
	}

	.v-menubar-menuitem:hover{
		border-bottom: 2px solid #684640 !important;
	}

	.v-menubar {
		background-image: none !important;
		border-radius: 0px !important;
		// border-color: white !important;
	}

	.v-menubar-selected {
		border: 10px;
	}

	.v-menubar:focus {
		border-radius: 0px !important;
		border: 1px solid #c5c5c5 !important;
		border-bottom-color: #bcbcbc !important; 
		// border-color: white !important;
	}

	.v-button{
		margin-left: 2px;
		// background-color: rgba(206,190,190,.9) !important;
	}

	.v-textfield {
		// margin-left: 2px;
		// margin-top: 2px;
	}

	.v-captiontext{
		margin-top: 2px;
	}
	a, a:hover{
		color: blue;
	}

	.login {
		margin: 20px;
		padding: 200px;
	}

	.v-panel-captionwrap{
		margin-left: -200px;
		margin-right: -200px;
	}

	.loginButton {
		margin-left: 31%;
		margin-top: 20px;
  		margin-bottom: 15px;
	}

	.window-layout {
		padding: 10px;
	}

	.no-toobar .gwt-RichTextToolbar-top{
		display: none;
	}

	.no-toobar .gwt-RichTextToolbar-bottom{
		display: none;
	}

	.vertical-align-bottom{
		vertical-align: bottom;
	}

	.v-slot{
		vertical-align: middle !important;
	}

	.v-caption-crawlerstatus-label{
		padding-left: 10px !important;
		padding-top: 0.4em !important;
	}

	.v-grid-tablewrapper {
		margin-top: 4px;
	}
	
	.horizontalContainer {
		width: 98px;
		margin: 0 auto;
		display: block;
	}
	.margin-top {
		margin-top: 10px;
	}
	.list-count{
		font-size:15px;
		padding-top:3px
	}
	
	element.style{
		color: #BC6154;
		fill: #BC6154;
	}
	
	.highcharts-title{
		fill: #BC6154 !important;
	}
	
	.crawler4 {
		border-bottom-color: #BC6154 !important;
		color: #BC6154 !important;
	}
	
	.v-tabsheet-tabitem-selected {
		border-bottom-color: #BC6154 !important;
		color: #BC6154 !important;
	}
  // Insert your own theme rules here
}
